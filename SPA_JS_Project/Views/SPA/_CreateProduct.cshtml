@model ProductInputModel
<form id="f" name="f" data-db-type="product" data-db-action="insert" data-controller-action="CreateProduct">

    <div class="form-group row mb-1">
        <label asp-for="ProductName" class="col-form-label col-2"></label>
        <div class="col-10">
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="Price" class="control-label col-2"></label>
        <div class="col-10">
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="Picture" class="control-label col-2"></label>
        <div class="col-10">
            <input type="file" asp-for="Picture" class="form-control col-2" />
            <span asp-validation-for="Picture" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mb-1">
        <label asp-for="IsAvailable" class="control-label col-2"></label>
        <div class="col-10">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="IsAvailable" checked>
            </div>
            <span asp-validation-for="IsAvailable" class="text-danger"></span>
        </div>
    </div>
</form>
