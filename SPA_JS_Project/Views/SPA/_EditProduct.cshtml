@model ProductEditModel
<form id="f" name="f" data-db-type="product" data-db-action="edit" data-controller-action="EditProduct">
    <div class="row">
        <div class="col-9">
            <input type="hidden" asp-for="ProductID" />
            <div class="form-group row mb-1">
                <label asp-for="ProductName" class="col-form-label col-3"></label>
                <div class="col-9">
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="Price" class="control-label col-3"></label>
                <div class="col-9">
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="Picture" class="control-label col-3"></label>
                <div class="col-9">
                    <input type="file" asp-for="Picture" class="form-control col-2" />
                    <span asp-validation-for="Picture" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-1">
                <label asp-for="IsAvailable" class="control-label col-3"></label>
                <div class="col-9">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="IsAvailable" checked>
                    </div>
                    <span asp-validation-for="IsAvailable" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="col-3">
            <img src="/Pictures/@ViewData["CurrentPic"]" style="width:150px" class="img-thumbnail" />
        </div>
    </div>
</form>