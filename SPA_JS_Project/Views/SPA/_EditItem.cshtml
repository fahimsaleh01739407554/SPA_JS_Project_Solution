@model OrderItem

<div class="form-group row mb-1">
    
    <label asp-for="ProductID" class="col-form-label col-form-label-sm col-2"></label>
    <div class="col-4">
        <select asp-for="ProductID" class="form-select" asp-items="@(new SelectList(ViewData["Products"] as IEnumerable<Product>, "ProductID", "ProductName"))">
            <option value="" selected>Select one</option>
        </select>
        <span asp-validation-for="ProductID" class="text-danger"></span>
    </div>
    <label asp-for="Quantity" class="col-form-label col-form-label-sm col-2"></label>
    <div class="col-3">
        <input type="number" min="1" asp-for="Quantity" class="form-control form-control-sm" >
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="col-1">
        <button  type="button" class="btn btn-sm deloi-edit"><i class="bi bi-trash"></i></button>
    </div>
</div>
